# 安裝 selenium
!pip install selenium


from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options

chrome_options = Options()
chrome_options.add_argument("--no-sandbox")
chrome_options.add_argument("--disable-dev-shm-usage")
chrome_options.add_argument("--window-size=1920,1080")
chrome_options.add_argument("--headless")  # 👈 可先關掉測試，避免驗證看不到

service = Service("/usr/bin/chromedriver")
driver = webdriver.Chrome(service=service, options=chrome_options)
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
import time

# 進入 Google 登入頁
driver.get("https://accounts.google.com/")
time.sleep(3)

# 輸入帳號
email_input = driver.find_element(By.ID, "identifierId")
email_input.send_keys("你的Gmail帳號")   # ⚠️換成你的帳號
email_input.send_keys(Keys.ENTER)
time.sleep(3)

# 輸入密碼
password_input = driver.find_element(By.NAME, "Passwd")
password_input.send_keys("你的密碼")     # ⚠️換成你的密碼
password_input.send_keys(Keys.ENTER)
time.sleep(5)

driver.get("https://tixcraft.com/")
time.sleep(5)

# 取得 cookies
tixcraft_cookies = driver.get_cookies()

import json
print(json.dumps(tixcraft_cookies, indent=2, ensure_ascii=False))

